{
  "name": "normkeeper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "local:test:api": "conc --raw --kill-others \"npm run delay && jest --env=node --testPathPattern=__tests__/api/\" \"next dev\"",
    "local:test:firestore_rules": "jest --env=node --testPathPattern=__tests__/firestore_rules/",
    "local:test:e2e": "playwright test",
    "local:watch:test:api": "conc --raw --kill-others \"jest --watch --env=node --testPathPattern=__tests__/api/\" \"next dev\"",
    "local:watch:test:foo": "conc --raw --kill-others \"jest --watch --env=node --testPathPattern=__tests__/foo/\" \"next dev\"",
    "local:watch:test:firestore_rules": "jest --watch --env=node --testPathPattern=__tests__/firestore_rules/",
    "server:dev": "cross-env REMOTE_SERVER=inside.env next dev",
    "server:start": "cross-env REMOTE_SERVER=inside.env next start",
    "server:preview:test:e2e": "cross-env REMOTE_SERVER=preview playwright test",
    "server:production:test:e2e": "cross-env REMOTE_SERVER=production playwright test",
    "server:test:api": "cross-env REMOTE_SERVER=inside.env jest --env=node --testPathPattern=__tests__/api/",
    "server:watch:test:foo": "cross-env REMOTE_SERVER=inside.env jest --watch --env=node --testPathPattern=__tests__/foo",
    "vercel:pull:preview:env": "vercel env pull --environment=preview",
    "vercel:pull:production:env": "vercel env pull --environment=production",
    "emulators": "firebase emulators:start --project normkeeper-dev",
    "delay": "node -e \"setTimeout(()=>{}, 2000)\""
  },
  "dependencies": {
    "@next/font": "13.1.1",
    "@types/node": "18.11.17",
    "@types/react-dom": "18.0.10",
    "eslint": "8.30.0",
    "eslint-config-next": "13.1.1",
    "firebase": "^9.19.1",
    "firebase-admin": "^11.5.0",
    "json5": "^2.2.3",
    "next": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.5",
    "@playwright/test": "^1.29.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.26",
    "@types/uuid": "^9.0.1",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^3.2.4",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  }
}
