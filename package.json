{
  "name": "normkeeper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint": "next lint",
    "start": "next start",
    "local:test:unit:client": "jest --forceExit __tests__/client/.*.test.[tj]s",
    "local:test:unit:backend": "jest --forceExit --env=node __tests__/backend/.*.test.[tj]s",
    "local:test:only:firestore_rules": "jest __tests__/firestore_rules/.*.test.[tj]s",
    "local:test:e2e": "playwright test",
    "local:watch:test:unit:client": "jest --watch __tests__/client/.*.test.[tj]s",
    "local:watch:test:unit:backend": "jest --watch --env=node __tests__/backend/.*.test.[tj]s",
    "local:watch:test:foo": "jest --watch --env=node __tests__/foo/.*.test.[tj]s",
    "local:watch:test:only:firestore_rules": "jest --watch __tests__/firestore_rules/.*.test.[tj]s",
    "server:dev": "cross-env REMOTE_SERVER=inside.env next dev",
    "server:start": "cross-env REMOTE_SERVER=inside.env next start",
    "server:preview:test:e2e": "cross-env REMOTE_SERVER=preview playwright test",
    "server:production:test:e2e": "cross-env REMOTE_SERVER=production playwright test",
    "server:test:unit:client": "cross-env REMOTE_SERVER=inside.env jest --forceExit __tests__/client/.*.test.[tj]s",
    "server:test:unit:backend": "cross-env REMOTE_SERVER=inside.env jest --forceExit --env=node __tests__/backend/.*.test.[tj]s",
    "server:watch:test:foo": "cross-env REMOTE_SERVER=inside.env jest --watch --env=node __tests__/foo/.*.test.[tj]s",
    "vercel:pull:development:env": "vercel env pull --environment=development",
    "vercel:pull:preview:env": "vercel env pull --environment=preview",
    "vercel:pull:production:env": "vercel env pull --environment=production",
    "emulators": "firebase emulators:start --project normkeeper-dev"
  },
  "dependencies": {
    "@next/font": "^13.4.4",
    "@types/react-dom": "^18.2.4",
    "eslint": "^8.30.0",
    "eslint-config-next": "^13.1.1",
    "firebase": "^9.19.1",
    "firebase-admin": "^11.5.0",
    "json5": "^2.2.3",
    "next": "^13.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.5",
    "@playwright/test": "^1.29.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.2.8",
    "@types/uuid": "^9.0.1",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.6",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^3.2.4",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0"
  }
}
